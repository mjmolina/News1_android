<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/TextView_padding"
        android:layout_marginTop="@dimen/TextView_marginTop"
        android:layout_marginLeft="@dimen/TextView_margin"
        android:layout_marginEnd="@dimen/TextView_margin"
        android:layout_marginRight="@dimen/TextView_margin"
        android:layout_marginStart="@dimen/TextView_margin"
        android:text="@string/ErrorMessage"
        android:textSize="@dimen/TextSize_18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tryAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/error"
        android:orientation="vertical"
        android:layout_margin="@dimen/TextView_margin"
        android:padding="@dimen/TextView_padding"
        android:text="@string/TryAgainMessage"
        android:textSize="@dimen/TextSize_16sp"/>
</RelativeLayout>